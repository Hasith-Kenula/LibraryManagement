                    xmlns:awsome ="http://schemas.fontawesome.io/icons/">

    <!--#region Member-->
    <Style x:Key="Dashboard ButtonMember" TargetType="RadioButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Name="border" CornerRadius="15" Padding="10 0 0 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <awsome:ImageAwesome Name="icon" 
                                                 Icon="Users" 
                                                 Width="20" 
                                                 Height="20" 
                                                 Foreground="{StaticResource NavItemColor}"/>

                            <Label Name="label" 
                                   Grid.Column="1" 
                                   Content="{TemplateBinding Content}"
                                   Foreground="{StaticResource NavItemColor}"
                                   VerticalAlignment="Center"
                                   />



                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" TargetName="icon" Value="{StaticResource NavigationPanelBackground}"/>
                            <Setter Property="Foreground" TargetName="label" Value="{StaticResource NavigationPanelBackground}"/>
                            <Setter Property="Background" TargetName="border" Value="White"/>
                            
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" TargetName="icon" Value="{StaticResource NavigationPanelBackground}"/>
                            <Setter Property="Foreground" TargetName="label" Value="{StaticResource NavigationPanelBackground}"/>
                            <Setter Property="Background" TargetName="border" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
